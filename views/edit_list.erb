<section id="todos">
  <header>
    <h2>Editing <%= @list[:name] %></h2>
    <ul>
      <li>
        <form action="/lists/<%= @id %>/destroy" method="post">
          <button type="submit" class="delete">Delete List</button>
        </form>
      </li>
    </ul>
  </header>
</section>

<form action="/lists/<%= @id %>" method="post">
  <dl>
    <dt>
      <label for="list_name">Enter the new name for the list:</label>
    </dt>
    <dd>
      <input type="text" name="list_name" value="<%= params[:list_name] || @list[:name] %>" placeholder="List Name"/>
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" name="" value="Save" />
    <a href="/lists/<%= @id %>">Cancel</a>
  </fieldset>
</form>
